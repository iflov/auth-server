    {
      "name": "Client Registration",
      "item": [
        {
          "name": "Register Client",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('clientId', response.client_id);",
                  "    pm.collectionVariables.set('clientSecret', response.client_secret);",
                  "    console.log('Client ID:', response.client_id);",
                  "    console.log('Client Secret:', response.client_secret);",
                  "} else {",
                  "    pm.collectionVariables.unset('clientId');",
                  "    pm.collectionVariables.unset('clientSecret');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_name\": \"Test Application\",\n  \"redirect_uris\": [\"http://127.0.0.1:3000/callback\", \"http://localhost:3001/callback\"],\n  \"grant_types\": [\"authorization_code\", \"refresh_token\"],\n  \"response_types\": [\"code\"],\n  \"scope\": \"mcp:*\",\n  \"token_endpoint_auth_method\": \"client_secret_post\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth",
                "register"
              ]
            }
          }
        }
      ]
